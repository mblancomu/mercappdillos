<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/negrojavi"
    android:gravity="bottom"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvnombreMercado"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="#fff" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/moradomapa" />

            <TextView
                android:id="@+id/tvtipoMercado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="#fff" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/moradomapa" />

            <TextView
                android:id="@+id/tvfechaMercado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="#fff" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/moradomapa" />

            <TextView
                android:id="@+id/tvmuniMercado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="#fff" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/moradomapa" />

            <TextView
                android:id="@+id/tvpuestosMercado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="#fff" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/moradomapa" />

            <TextView
                android:id="@+id/tvdireccionMercado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="#fff" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/moradomapa" />

            <TextView
                android:id="@+id/tvhorarioMercado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="#fff" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/moradomapa" />

            <TextView
                android:id="@+id/tvtransporteMercado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="#fff" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/moradomapa" />

            <TextView
                android:id="@+id/tvobservacionesMercado"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="#fff" />
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/moradomapa" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>